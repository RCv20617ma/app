{% extends "datatable.html.twig" %}
{% block title %}Liste des contrats de location{% endblock %}
{% block header %}Liste des contrats de location{% endblock %}

{% block content %}
    <div class="row">
        <table class="table table-striped table-bordered table-hover datatable">
            <thead>
            <tr class="headings">
                <th>Ref</th>
                <th>Client</th>
                <th>Voiture</th>
                <th>DÃ©but</th>
                <th>Fin</th>
                <th>Nombre de jour</th>
                <th>Prix/jour</th>
                <th>Total</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>
            {% for c in contracts %}
                <tr>
                    <td>{{ c.id }}</td>
                    <td>{{ c.customer }}</td>
                    <td>{{ c.car }}</td>
                    <td>{{ c.startDate|date('d/m/Y  H:i') }}</td>
                    <td>{{ c.endDate|date('d/m/Y  H:i') }}</td>
                    <td>{{ c.numberDays }}</td>
                    <td>{{ c.priceDay }}</td>
                    <td>{{ c.total }}</td>
                    <td>
                        <a class="btn btn-warning btn-xs" href=""><i class="fa fa-edit"></i></a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
