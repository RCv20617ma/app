{% extends "datatable.html.twig" %}
{% block title %}Liste  des voitures {% endblock %}
{% block header %}Liste des voitures {% endblock %}

{% block content %}
    <div class="row">
        <table class="table table-striped table-bordered table-hover datatable">
            <thead>
            <tr class="headings">
                <th>Modèle</th>
                <th>Numéro d'immatriculation</th>
                <th>Numéro d'immatriculation WW</th>
                <th>Date d'achat</th>
                <th>Date de vente prévue</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>
            {% for c in cars %}
                <tr>
                    <td>{{ c.model }}</td>
                    <td>{{ c.carNumber }}</td>
                    <td>{{ c.carNumberWW }}</td>
                    <td>{{ c.purchaseDate|date('d/m/Y  H:i') }}</td>
                    <td>{{ c.saleDatePlanned|date('d/m/Y  H:i') }}</td>
                    <td>
                        <a class="btn btn-warning btn-xs" href="{{ path("entity_edit", {"entity":"car","id":c.id}) }}"><i class="fa fa-edit"></i></a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
