{% extends "datatable.html.twig" %}
{% block title %}Liste des charges {% endblock %}
{% block header %}Liste des charges {% endblock %}

{% block content %}
    <div class="row">
        <table class="table table-striped table-bordered table-hover datatable">
            <thead>
            <tr class="headings">
                <th>Type Charge </th>
                <th>Montant</th>
                <th>Date</th>
                <th>Commentaire</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>
            {% for c in charges %}
                <tr>
                    <td>{{ c.id  }}</td>
                    <td>{{ c.amount }}</td>
                    <td>{{ c.date|date('d/m/Y  H:i') }}</td>
                    <td>{{ c.comment }}</td>
                    <td>
                        <a class="btn btn-warning btn-xs" href="{{ path("entity_edit", {"entity":"charge","id":c.id}) }}"><i class="fa fa-edit"></i></a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
