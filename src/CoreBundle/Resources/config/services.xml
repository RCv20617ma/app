<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="core.doctrine.entity_listener_resolver" class="CoreBundle\Doctrine\EntityListenerResolver">
            <argument type="service" id="service_container"/>
        </service>
        <service id="core.entity_listener.reference" class="CoreBundle\Entity\Listener\ReferenceListener">
            <argument type="service" id="translator.default"/>
            <tag name="doctrine.entity_listener"/>
        </service>
        <service id="core.manager.abstract" class="CoreBundle\Manager\AbstractManager" abstract="true">
            <argument type="service" id="doctrine.orm.entity_manager" />
        </service>
    </services>
</container>