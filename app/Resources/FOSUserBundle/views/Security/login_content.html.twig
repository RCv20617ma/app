{% extends "layout.html.twig" %}
{% trans_default_domain 'FOSUserBundle' %}
{% block container %}
    <body>
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Veuillez vous connecter</h3>
                    </div>
                    <div class="panel-body">
                        <form id="login_form" action="{{ path("fos_user_security_check") }}" role="form"
                              method="post" data-toggle="validator" data-disable="false">
                            <fieldset>

                                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
                                {% if error %}
                                    <div class="alert alert-danger"><strong><i class="icon-warning-sign"></i> erreur : </strong>  {{ error.messageKey|trans(error.messageData, 'security') }}</div>
                                {% endif %}
                                <div class="form-group">
                                    <input type="text" class="form-control input-lg"
                                           placeholder="{{ 'security.login.username'|trans }}" id="username"
                                           name="_username"
                                           value="{{ last_username }}" required/>
                                </div>

                                <div class="form-group">
                                    <input type="password" class="form-control input-lg"
                                           placeholder="{{ 'security.login.password'|trans }}" id="password"
                                           name="_password"
                                           required/>
                                </div>

                                <div class="checkbox">
                                    <label class="content-color">
                                        <input type="checkbox" id="remember_me" name="_remember_me" value="on"
                                               class="le-checbox auto-width inline"/>
                                        <span class="bold">{{ 'security.login.remember_me'|trans }}</span>
                                    </label>
                                </div>
                                <!-- Change this to a button or input when using this as a form -->

                                <button type="submit"
                                        class="btn btn-lg btn-success btn-block">{{ 'security.login.submit'|trans }}</button>

                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </body>
{% endblock container %}