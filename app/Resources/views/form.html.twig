{% extends 'layout.html.twig' %}

{% block content %}
    {% if not form.vars.valid %}
        <div class="alert alert-danger" >
            <ul>
                {% for child in form.children %}
                    {%for error in child.vars.errors%}
                        <li><b>{{ child.vars.label|trans }}</b>: {{error.message}}</li>
                    {%endfor%}
                {%endfor%}
            </ul>
        </div>
    {%endif%}
{% endblock %}
