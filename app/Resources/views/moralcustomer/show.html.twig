{% extends 'base.html.twig' %}

{% block body %}
    <h1>Moralcustomer</h1>

    <table>
        <tbody>
            <tr>
                <th>Socialreason</th>
                <td>{{ moralCustomer.socialReason }}</td>
            </tr>
            <tr>
                <th>Managername</th>
                <td>{{ moralCustomer.managerName }}</td>
            </tr>
            <tr>
                <th>Website</th>
                <td>{{ moralCustomer.webSite }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ moralCustomer.id }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ moralCustomer.phone|phone_number_format('NATIONAL') }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ moralCustomer.email }}</td>
            </tr>
            <tr>
                <th>Archived</th>
                <td>{% if moralCustomer.archived %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{% if moralCustomer.createdAt %}{{ moralCustomer.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updatedat</th>
                <td>{% if moralCustomer.updatedAt %}{{ moralCustomer.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('customer_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('customer_edit', { 'id': moralCustomer.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
